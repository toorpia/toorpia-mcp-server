# toorPIA MCP Server Configuration

# Toorpia Backend API URL
TOORPIA_API_URL=http://localhost:3000

# Optional API key for backend authentication
# TOORPIA_API_KEY=your_api_key_here

# JWT Authentication (choose one method)
# Option 1: JWKS endpoint for JWT verification
# AUTH_JWKS_URL=https://your-auth-provider.com/.well-known/jwks.json

# Option 2: Direct public key for JWT verification
# AUTH_PUBLIC_KEY="-----BEGIN CERTIFICATE-----\nMIIC...your_public_key...==\n-----END CERTIFICATE-----"

# Development settings
NODE_ENV=development
SKIP_AUTH=true

# Logging configuration
LOG_LEVEL=info
VERBOSE_LOGGING=false
ENABLE_FILE_LOGGING=false
